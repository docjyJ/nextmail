{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": ["./src/**/*.js","./src/**/*.ts", "./src/**/*.vue", "**/*.ts"],
  "exclude": ["tests", "vitest.config.ts"],

  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ],
    }
  },

  "vueCompilerOptions": {
    "target": 3.3,
  },
}
